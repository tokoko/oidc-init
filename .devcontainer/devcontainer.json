{
	"name": "OIDC Init",
	"dockerComposeFile": "compose.yaml",
	"service": "app",
	"workspaceFolder": "/workspace",

	"postCreateCommand": "go mod download && cd sdks/python && uv sync",

	"forwardPorts": [8080],

	"portsAttributes": {
		"8080": {
			"label": "Keycloak",
			"onAutoForward": "notify"
		}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.black-formatter",
				"charliermarsh.ruff"
			],
			"settings": {
				"go.gopath": "/root/go",
				"python.defaultInterpreterPath": "/workspace/sdks/python/.venv/bin/python",
				"python.formatting.provider": "black",
				"editor.formatOnSave": true
			}
		}
	}
}
